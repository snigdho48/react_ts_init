{
  "name": "demo_typescript",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "npx eslint -c eslint.config.mjs . --report-unused-disable-directives --fix",
    "preview": "vite preview",
    "prepare": "husky install",
    "prettify": "prettier --write .",
    "push": "yarn run lint -- && yarn run prettify && git add . && git commit -m \"$(git status | awk '/(use \"git restore --staged <file>...\" to unstage)/{p=1; next} p')\" && git push"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.2.5",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "lint-staged": "^15.2.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^9.1.2",
    "react-router-dom": "^6.23.1",
    "redux-thunk": "^3.1.0",
    "redux-toolkit": "^1.1.2",
    "tailwind-styled-components": "^2.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.3.0",
    "@testing-library/jest-dom": "^6.4.5",
    "@testing-library/react": "^15.0.7",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^9.3.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "globals": "^15.3.0",
    "husky": "^9.0.11",
    "prettier": "^3.2.5",
    "typescript": "^5.2.2",
    "vite": "^5.2.0",
    "vitest": "^1.6.0"
  },
  "prettier": {
    "singleQuote": true,
    "jsxSingleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "test"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --fix",
    "*.{json,js,ts,jsx,tsx,html}": "prettier --write --ignore-unknown"
  }
}
